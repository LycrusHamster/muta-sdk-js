{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "composite": true,
    "lib": ["es2017", "dom"],
    "baseUrl": "./packages",
    "paths": {
      "@mutadev/account": ["muta-account/src"],
      "@mutadev/client": ["muta-client/src"],
      "@mutadev/client-raw": ["muta-client-raw/src"],
      "@mutadev/defaults": ["muta-defaults/src"],
      "@mutadev/muta-sdk": ["muta-sdk/src"],
      "@mutadev/service": ["muta-service/src"],
      "@mutadev/types": ["muta-types/src"],
      "@mutadev/utils": ["muta-utils/src"],
      "@mutadev/wallet": ["muta-wallet/src"],
      "@mutadev/shared": ["shared/src"]
    }
  },
  "files": [],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/muta-defaults" },
    { "path": "./packages/muta-types" },
    { "path": "./packages/muta-utils" },
    { "path": "./packages/muta-client-raw" },
    { "path": "./packages/muta-client" },
    { "path": "./packages/muta-account" },
    { "path": "./packages/muta-service" },
    { "path": "./packages/muta-wallet" },
    { "path": "./packages/muta-sdk" }
  ]
}
